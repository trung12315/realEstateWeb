                                    </div>
                                </div>
                            </li>
                        </ul>
                        }
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="pagination-list">
                                @Html.PagedListPager(Model, page => Url.Action("SearchCategory", new { page, search = @ViewBag.search , @searchString = @ViewBag.SearchString }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>


