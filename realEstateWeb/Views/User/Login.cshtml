@model realEstateWeb.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="shortcut icon" type="image/png" href="~/Assets/client/images/logo.png" />
    <link rel="stylesheet" href="~/Assets/client/Css/login.css" />
    <style>

        .text-danger {
            position: absolute;
            bottom: 0;
            left: -5px;
        }

        .form-warning {
            color: #82b5a5;
            pointer-events: none;
            position: absolute;
            left: 20;
            top: 90px;
        }

            .form-warning ul {
                list-style: none;
            }
    </style>


</head>
<body>
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="box login__box">
            <h2>Đăng Nhập</h2>
            <form>
                @Html.ValidationSummary(true, "", new { @class = "form-warning" })
                <div class="inputBox">

                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Tên đăng nhập", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="inputBox">

                    @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                </div><br /><br />

                <input type="submit" name="" value="Đăng nhập">
                <div class="register__content">
                    <h5>Bạn không có tài khoản ?</h5> <a href="/User/Register" class="login__open">Đăng ký</a>
                </div>
            </form>

        </div>

    }


</body>
</html>

